# ===================================
# PRODUCTION CONFIGURATION
# ===================================
NODE_ENV=production
PORT=5000
API_URL=https://your-backend-domain.com
API_PREFIX=/api
API_VERSION=v1

# ===================================
# DATABASE CONFIGURATION (Production)
# ===================================
# Use DATABASE_URL for cloud database (Render, Railway, etc.)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# ===================================
# JWT & AUTHENTICATION
# ===================================
JWT_SECRET=your_production_jwt_secret_key_change_this
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_production_refresh_token_secret
ADMIN_SESSION_TIMEOUT=24h

# ===================================
# CORS CONFIGURATION
# ===================================
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# ===================================
# EMAIL SERVICE (SMTP)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASSWORD=your_production_app_password
FROM_EMAIL=noreply@devasahayammountshrine.com

# ===================================
# CLOUD STORAGE (AWS S3 - Recommended for Production)
# ===================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=ap-south-1
# S3_BUCKET_NAME=devasahayam-shrine-uploads

# ===================================
# PAYMENT GATEWAYS (Production Keys)
# ===================================
# Razorpay
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# PayPal
PAYPAL_CLIENT_ID=your_production_paypal_client_id
PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret
PAYPAL_MODE=live

# ===================================
# SECURITY CONFIGURATION
# ===================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=error
LOG_FILE=./logs/app.log


